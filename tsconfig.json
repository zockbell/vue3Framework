{
  "include": [
    "env.d.ts", 
    "src/**/*", 
    "src/**/*.vue",
    "*.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es2020",
    "target": "es2020",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": [
      "es2015",
      "es2020",
      "es2022"
    ]
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}